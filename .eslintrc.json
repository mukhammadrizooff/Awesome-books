{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "import/extensions": [ 1, {
        "js": "always", "json": "always"
      }],
      "max-classes-per-file": 0,
      "no-use-before-define": "off",
      "radix": "off",
      "no-plusplus": "off"
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }